---
import Base from '../layouts/Base.astro';
import ProjectCard from '../components/ProjectCard.astro';
---

<Base>
  <!-- Hero -->
  <section class="hero">
    <div class="hero__mantra">oṃ vajrapāṇi hūṃ phaṭ</div>
    <h1 class="hero__name">Thomas Brady</h1>
    <div class="hero__line"></div>
    <p class="hero__identity">Techno-Vajrapāṇi</p>
    <p class="hero__thesis">
      <em>Making invisible structures visible and navigable — in research infrastructure, contemplative technology, and coordination under AI acceleration.</em>
    </p>
    <div class="hero__vajra">
      <svg viewBox="0 0 40 40" width="60" height="60">
        <line x1="20" y1="2" x2="20" y2="38" stroke-linecap="round"/>
        <circle cx="20" cy="20" r="4"/>
        <line x1="10" y1="8" x2="20" y2="16" stroke-linecap="round"/>
        <line x1="30" y1="8" x2="20" y2="16" stroke-linecap="round"/>
        <line x1="10" y1="32" x2="20" y2="24" stroke-linecap="round"/>
        <line x1="30" y1="32" x2="20" y2="24" stroke-linecap="round"/>
        <circle cx="20" cy="2" r="2"/>
        <circle cx="20" cy="38" r="2"/>
      </svg>
    </div>
  </section>

  <!-- Projects -->
  <section class="projects">
    <div class="section-divider">
      <span class="section-number">01</span>
      <hr />
    </div>

    <div class="projects-grid">
      <ProjectCard
        title="Scholion"
        eyebrow="Research Infrastructure"
        description="Mapping epistemic dependencies in scientific reasoning. An interactive argument visualization tool grounded in Toulmin argumentation theory and truth-maintenance systems."
        tags={['Argumentation Theory', 'Graph Visualization', 'Epistemology']}
        href="/writing/scholion/"
      />
      <ProjectCard
        title="Notice"
        eyebrow="Contemplative Technology"
        description="Interoceptive awareness training for Apple Watch and iPhone. Two-tier AI architecture integrating on-device models for real-time context with Claude for longitudinal pattern analysis."
        tags={['SwiftUI', 'Apple Watch', 'AI Architecture']}
        href="/writing/notice/"
      />
      <ProjectCard
        title="Learned Compilation"
        eyebrow="Research Engineering"
        description="Production ML compilers make four coupled decisions sequentially, leaving 15–30% of training throughput on the table. Investigating whether a learned planner can close the gap."
        tags={['Coordination Theory', 'AI Acceleration', 'Research']}
        href="/writing/learned-compilation/"
      />
      <ProjectCard
        title="Absolute Beginners++"
        eyebrow="Applied Methodology"
        description="A practical methodology for AI-assisted work. Beginners have the highest leverage — if given method."
        tags={['AI-Assisted Work', 'Methodology', 'Leverage']}
        href="/writing/ab-essay/"
      />
    </div>
  </section>
</Base>

<style>
  /* ── Hero ── */
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 1;
    padding: 2rem;
    text-align: center;
  }

  .hero__mantra {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.6rem;
    letter-spacing: 0.5em;
    text-transform: uppercase;
    color: var(--text-faint);
    margin-bottom: 1.5rem;
    opacity: 0;
    animation: fadeUp 1.2s ease 0.3s forwards;
  }

  .hero__name {
    font-family: 'Cinzel', serif;
    font-weight: 400;
    font-size: clamp(2.5rem, 8vw, 6.5rem);
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--text);
    line-height: 1.05;
    opacity: 0;
    animation: fadeUp 1.2s ease 0.6s forwards;
  }

  .hero__line {
    width: 100px;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--accent), transparent);
    margin-top: 1rem;
    opacity: 0;
    animation: fadeUp 1.2s ease 0.8s forwards;
  }

  .hero__identity {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.65rem;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: var(--accent);
    margin-top: 1.5rem;
    opacity: 0;
    animation: fadeUp 1.2s ease 1s forwards;
  }

  .hero__thesis {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.15rem;
    color: var(--text-light);
    max-width: 520px;
    margin-top: 1.5rem;
    line-height: 1.8;
    opacity: 0;
    animation: fadeUp 1.2s ease 1.3s forwards;
  }

  .hero__vajra {
    margin-top: 3rem;
    opacity: 0;
    animation: fadeUp 1.2s ease 1.6s forwards;
  }

  .hero__vajra svg {
    fill: none;
    stroke: var(--accent);
    stroke-width: 1.5;
    opacity: 0.4;
    animation: pulse-glow 3s ease-in-out infinite;
  }

  /* ── Projects ── */
  .projects {
    position: relative;
    z-index: 1;
    max-width: 1000px;
    margin: 0 auto;
    padding: 4rem 2rem 6rem;
  }

  .section-divider {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .section-number {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.65rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--accent);
    white-space: nowrap;
  }

  .section-divider hr {
    flex: 1;
    border: none;
    border-top: 1px solid var(--border-mid);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 700px) {
    .projects-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (max-width: 640px) {
    .hero { padding: 2rem 1.5rem; }
    .projects { padding: 3rem 1.5rem 4rem; }
  }
</style>
