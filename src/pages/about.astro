  </section>
</Base>

<style>
  .about {
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
    padding: 8rem 2rem 6rem;
  }

  /* ── Section Dividers ── */
  .section-divider {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin: 4rem 0 2rem;
  }

  .section-divider:first-child {
    margin-top: 0;
  }

  .section-number {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.65rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--accent);
    white-space: nowrap;
  }

  .section-divider hr {
    flex: 1;
    border: none;
    border-top: 1px solid var(--border-mid);
  }

  /* ── Experience Cards ── */
  .exp-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    padding: 2rem;
    margin-bottom: 1.5rem;
  }

  .exp-card__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
    gap: 1rem;
  }

  .exp-card__role {
    font-family: 'Cormorant Garamond', serif;
    font-weight: 600;
    font-size: 1.3rem;
    color: var(--text);
  }

  .exp-card__org {
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    font-size: 0.85rem;
    color: var(--accent);
    margin-top: 0.25rem;
  }

  .exp-card__date {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.7rem;
    color: var(--text-muted);
    white-space: nowrap;
  }

  .exp-card__subrole {
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    font-size: 0.8rem;
    color: var(--text-mid);
    margin: 1.5rem 0 0.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border);
  }

  .exp-card__details {
    list-style: none;
    padding: 0;
  }

  .exp-card__details li {
    font-family: 'Cormorant Garamond', serif;
    font-size: 0.95rem;
    color: var(--text-light);
    line-height: 1.7;
    padding: 0.4rem 0;
    padding-left: 1rem;
    position: relative;
  }

  .exp-card__details li::before {
    content: '–';
    position: absolute;
    left: 0;
    color: var(--text-muted);
  }

  .exp-card__details li :global(strong) {
    color: var(--text);
    font-weight: 600;
  }

  .exp-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1.25rem;
  }

  .exp-card__tags span {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.55rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--accent);
    border: 1px solid var(--accent-glow);
    padding: 0.15rem 0.5rem;
    border-radius: 2px;
  }

  /* ── Skills Grid ── */
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .skill-group h3 {
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    font-size: 0.8rem;
    color: var(--accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
  }

  .skill-group ul {
    list-style: none;
    padding: 0;
  }

  .skill-group li {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--text-mid);
    padding: 0.3rem 0;
  }

  /* ── Marks ── */
  .marks {
    margin-bottom: 2rem;
  }

  .mark-item {
    display: flex;
    gap: 1.5rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--border);
  }

  .mark-year {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--accent);
    white-space: nowrap;
  }

  .mark-label {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1rem;
    color: var(--text-light);
  }

  /* ── Lineage ── */
  .lineage {
    margin-bottom: 2rem;
  }

  .lineage__school {
    font-family: 'Cormorant Garamond', serif;
    font-weight: 600;
    font-size: 1.3rem;
    color: var(--text);
  }

  .lineage__degree {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1rem;
    color: var(--text-light);
    margin-top: 0.25rem;
  }

  .lineage__note {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--text-muted);
    margin-top: 0.5rem;
  }

  /* ── Responsive ── */
  @media (max-width: 640px) {
    .about { padding: 6rem 1.5rem 4rem; }
    .exp-card { padding: 1.5rem; }
    .exp-card__header { flex-direction: column; }
    .skills-grid { grid-template-columns: 1fr; }
  }
</style>
