---
import Base from './Base.astro';

interface Props {
  title: string;
  description: string;
  date: Date;
  tags?: string[];
  connected_project?: string;
  minutesRead: number;
}

const { title, description, date, tags, connected_project, minutesRead } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Base title={`${title} — Thomas Brady`} description={description}>
  <article class="post">
    <div class="section-divider">
      <span class="section-number">Essay</span>
      <hr />
    </div>

    <header class="post__header">
      <h1 class="post__title">{title}</h1>
      <div class="post__meta">
        <time datetime={date.toISOString().slice(0, 10)}>{formattedDate}</time>
        <span class="post__meta-sep">·</span>
        <span>{minutesRead} min read</span>
        {connected_project && (
          <>
            <span class="post__meta-sep">·</span>
            <span class="post__project">{connected_project}</span>
          </>
        )}
      </div>
      {tags && tags.length > 0 && (
        <div class="post__tags">
          {tags.map(tag => (
            <span class="post__tag">{tag}</span>
          ))}
        </div>
      )}
    </header>

    <div class="post__content">
      <slot />
    </div>
  </article>
</Base>

<style>
  .post {
    position: relative;
    z-index: 1;
    max-width: 720px;
    margin: 0 auto;
    padding: 8rem 2rem 6rem;
  }

  .section-divider {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .section-number {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.65rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--accent);
    white-space: nowrap;
  }

  .section-divider hr {
    flex: 1;
    border: none;
    border-top: 1px solid var(--border-mid);
  }

  .post__header {
    margin-bottom: 3rem;
  }

  .post__title {
    font-family: 'Cormorant Garamond', serif;
    font-weight: 600;
    font-size: clamp(1.8rem, 5vw, 2.8rem);
    color: var(--text);
    line-height: 1.2;
    margin: 0 0 1rem;
  }

  .post__meta {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.7rem;
    color: var(--text-muted);
    letter-spacing: 0.05em;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .post__meta-sep {
    color: var(--border-mid);
  }

  .post__project {
    color: var(--accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .post__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .post__tag {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.6rem;
    letter-spacing: 0.05em;
    padding: 0.2em 0.6em;
    border: 1px solid var(--border);
    border-radius: 2px;
    color: var(--text-light);
  }

  /* Prose styles */
  .post__content {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.15rem;
    line-height: 1.85;
    color: var(--text);
  }

  .post__content :global(h2) {
    font-family: 'Cormorant Garamond', serif;
    font-weight: 600;
    font-size: 1.6rem;
    color: var(--text);
    margin: 3rem 0 1rem;
    line-height: 1.3;
  }

  .post__content :global(h3) {
    font-family: 'Cormorant Garamond', serif;
    font-weight: 600;
    font-size: 1.3rem;
    color: var(--text);
    margin: 2.5rem 0 0.75rem;
    line-height: 1.3;
  }

  .post__content :global(h4) {
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    font-size: 1rem;
    color: var(--text-mid);
    margin: 2rem 0 0.5rem;
    line-height: 1.4;
  }

  .post__content :global(p) {
    margin: 0 0 1.25rem;
  }

  .post__content :global(blockquote) {
    border-left: 2px solid var(--accent);
    padding-left: 1.25rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--text-mid);
  }

  .post__content :global(ul),
  .post__content :global(ol) {
    margin: 0 0 1.25rem;
    padding-left: 1.5rem;
  }

  .post__content :global(li) {
    margin-bottom: 0.4rem;
  }

  .post__content :global(code) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.85em;
    background: var(--bg-warm);
    padding: 0.15em 0.35em;
    border-radius: 3px;
  }

  .post__content :global(pre) {
    background: var(--bg-dark);
    color: var(--text-faint);
    padding: 1.25rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1.5rem 0;
    font-size: 0.85rem;
    line-height: 1.6;
  }

  .post__content :global(pre code) {
    background: none;
    padding: 0;
    font-size: inherit;
  }

  .post__content :global(strong) {
    font-weight: 700;
    color: var(--text);
  }

  .post__content :global(em) {
    font-style: italic;
  }

  .post__content :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 0.15em;
  }

  .post__content :global(a:hover) {
    color: var(--text);
  }

  .post__content :global(hr) {
    border: none;
    border-top: 1px solid var(--border-mid);
    margin: 2.5rem 0;
  }

  .post__content :global(.todo-interactive) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--text-muted);
    border: 1px dashed var(--border-mid);
    border-radius: 4px;
    padding: 1.5rem;
    margin: 1.5rem 0;
    text-align: center;
    background: var(--accent-dim);
  }

  @media (max-width: 640px) {
    .post {
      padding: 6rem 1.5rem 4rem;
    }
  }
</style>
